# dyndao makefile, just for testing for now

# Just a test rule for now.
test:
	DB2_DSN='DRIVER=DB2; DATABASE=SAMPLE;HOSTNAME=$(DB2_HOST);PORT=$(DB2_PORT);PROTOCOL=TCPIP;UID=$(DB2_USER);PWD=$(DB2_PASS);' go test -v 

cover:
	DB2_DSN='DATABASE=SAMPLE; HOSTNAME=$(DB2_HOST); PORT=$(DB2_PORT); PROTOCOL=TCPIP; UID=$(DB2_USER); PWD=$(DB2_PASS);' go test -cover

bench:
	DB2_DSN='DATABASE=SAMPLE; HOSTNAME=$(DB2_HOST); PORT=$(DB2_PORT); PROTOCOL=TCPIP; UID=$(DB2_USER); PWD=$(DB2_PASS);' go test -bench=.

race:
	DB2_DSN='DATABASE=SAMPLE; HOSTNAME=$(DB2_HOST); PORT=$(DB2_PORT); PROTOCOL=TCPIP; UID=$(DB2_USER); PWD=$(DB2_PASS);' go test -race
